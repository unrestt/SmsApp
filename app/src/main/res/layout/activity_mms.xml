<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MMS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:elevation="4dp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium" />

    <ScrollView
        android:layout_below="@id/textTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:id="@+id/telLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numer telefonu"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="18sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/pickedImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:contentDescription="Wybrane zdjęcie"/>


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/pickImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:text="Wybierz zdjęcie z galerii"
                android:layout_gravity="right"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#fff" />


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/sendMmsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF5722"
                android:padding="20dp"
                android:text="Wyślij MMS"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textColor="#fff" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="#FF5722"
        android:textColor="#fff"
        app:iconTint="@android:color/white"
        app:icon="@drawable/baseline_keyboard_backspace_24"
        android:layout_alignParentBottom="true"
        />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

        <include layout="@layout/fab_menu" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>